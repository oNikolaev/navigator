		ОткрытьФорму("Отчет." + ТекущиеДанные.Имя + ".Форма");
		
	ИначеЕсли ТекущиеДанные.ИмяЭлементаКоллекции = "Обработка" Тогда
		
		ОткрытьФорму("Обработка." + ТекущиеДанные.Имя + ".Форма");
		
