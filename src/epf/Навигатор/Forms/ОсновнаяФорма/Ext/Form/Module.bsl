	МассивСтрок = СтрРазделить(ИмяЭлементаСписка, Разделитель, Ложь); // МассивСтрок.Количество() = 5
	Если МассивСтрок.Количество() < 4 Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрыФормы = Новый Структура("ИмяКоллекции,ИмяЭлементаКоллекции,ИмяОбъектаБазы", МассивСтрок[1], МассивСтрок[2], МассивСтрок[3]); // "Документы","Документ","АвансовыйОтчет"
	
	ПолноеИмяФормы = ПолноеИмяФормыОбработки(ЭтаФорма.ИмяФормы, "СтруктураХраненияОбъектаМетаданных"); // ВнешняяОбработка.Навигатор.Форма.СтруктураХраненияОбъектаМетаданных
	ОткрытьФорму(ПолноеИмяФормы, ПараметрыФормы, ЭтаФорма, Истина);
	
